{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "nunomaduro/laravel-starter-kit-inertia-react",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4.0",
        "inertiajs/inertia-laravel": "^2.0.19",
        "laravel/fortify": "^1.34.0",
        "laravel/framework": "^12.49",
        "laravel/tinker": "^2.11.0",
        "laravel/wayfinder": "dev-next",
        "nunomaduro/essentials": "^1.0.1",
        "spatie/image": "^3.9",
        "spatie/laravel-permission": "^6.24"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.1.9",
        "fakerphp/faker": "^1.24.1",
        "fruitcake/laravel-debugbar": "^4.0.5",
        "larastan/larastan": "^3.9.2",
        "laravel/boost": "^2.0.5",
        "laravel/pail": "^1.2.4",
        "laravel/pint": "^1.27.0",
        "laravel/telescope": "^5.16.1",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.3",
        "pestphp/pest": "^4.3.2",
        "pestphp/pest-plugin-browser": "^4.2.1",
        "pestphp/pest-plugin-laravel": "^4.0.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.3",
        "rector/rector": "^2.3.5",
        "roave/security-advisories": "dev-latest",
        "spatie/boost-spatie-guidelines": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "setup": [
            "composer install",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate",
            "@php artisan migrate --force",
            "bun install",
            "bun run build"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "bunx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"bun run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan clear",
            "@update:requirements",
            "@php artisan boost:update --ansi || true"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "update:requirements": [
            "composer bump",
            "bunx npm-check-updates -u"
        ],
        "lint": [
            "rector",
            "pint --parallel",
            "bun run lint"
        ],
        "test:type-coverage": "pest --type-coverage --min=100",
        "test:lint": [
            "pint --parallel --test",
            "rector --dry-run",
            "bun run test:lint"
        ],
        "test:unit": "pest --parallel --coverage --exactly=100.0",
        "test:types": [
            "phpstan",
            "bun run test:types"
        ],
        "test": [
            "@test:type-coverage",
            "@test:unit",
            "@test:lint",
            "@test:types"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
